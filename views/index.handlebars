<div class="row">
<div class"col-md-6">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOURED!</button>
        </form>
        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit">DELETE!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-6">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
