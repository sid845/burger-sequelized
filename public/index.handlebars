<div class="row center-block text-center">
<div class"col-md-6 center-block text-center">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOURED!</button>
        </form>

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <!-- option 2, pass in the id of the burger inside the form - you would access this in the route using req.body.id not req.params.id -->
          <!-- <input type="hidden" name="id" value="{{this.id}}"> -->
          <button type="submit">DELETE!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-6 center-block text-center">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR!</button>
        </form>
        
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

